Your portfolio

<h1><%= @portfolio.name %></h1>
$<%= @portfolio.balance %>

<% if @portfolio.orders.empty? %>
    Your portfolio is empty.
<% else %>
    <%= content_tag :ul do %>
        <% @portfolio.orders.stocks.each do |stock| %>
            <%= link_to(content_tag(:li, stock.symbol), stock_path(stock)) %> <%= stock.name.gsub('&#39;', '\'') %>
        <% end %>
    <% end %>
<% end %>


