
<div id="filter-div">
    <h3><%= link_to 'Home', portfolios_path %></h3>
    <u><h1>Check boxes to make stocks unavailable<h1></u>
    <%= form_for :stock, url: complete_path, method: :put, :html => { :class => "filter-form"} do |f| %>
        <%= f.collection_check_boxes(:id, Stock.all, :id, :name) do |s| %>
            <%= s.label class:"label-checkbox grid-item" do %>
                <%= s.check_box + s.text %>
            <% end %>
        <% end  %>
        <%= f.submit "FILTER STOCKS" %>
    <% end %>
</div>

