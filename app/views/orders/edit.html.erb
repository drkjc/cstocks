<%= link_to 'Reject Trade', portfolio_order_path(portfolio_id: @portfolio.id, id: @order.id), :method => :delete%>

<%= form_for @order do |o| %>
    <%= o.label :symbol %>
    <%= o.text_field :symbol %>
    <%= o.label :number_of_shares %>
    <%= o.number_field :number_of_shares %>
    <%= o.label :purchase_price %>
    <%= o.number_field :purchase_price %>
    <%= o.hidden_field :portfolio_id, :value => @portfolio.id %>
    <%= o.hidden_field :name, :value => @order.name %>
    <%= o.submit 'Approve Trade' %>
<% end %>